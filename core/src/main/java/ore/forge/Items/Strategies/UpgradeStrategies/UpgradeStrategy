//ConstantMultiply {
    public void upgrade(ore) {
        ore.setOreValue(ore.getOreValue * modifier);
    }
}

ConstantAdd {
    public void upgrade(Ore ore) {
        ore.setOreValue(ore.getOreValue + modifier);
    }
}

ConditionalValueMultiply {
    public void upgrade(Ore ore) {
        if(ore.getOreValue < threshold) {
            ore.setOreValue(ore.getOreValue * modifier);
        } else {
            ore.setOreValue(ore.getOrvalue * elsemodifier);
        }
    }
}